<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /new_thafheem_web/
  
  # Don't rewrite existing files or directories
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  
  # Rewrite everything else to index.html (SPA fallback)
  RewriteRule . /new_thafheem_web/index.html [L]
</IfModule>

# Correct MIME types
AddType application/javascript .js .mjs
AddType text/css              .css
AddType application/json      .json

# Optional: CORS for static assets (fonts, JS, etc.)
# This is NOT the API CORS â€“ just assets.
<IfModule mod_headers.c>
  <FilesMatch "\.(js|mjs|css|json|woff|woff2|ttf|svg|ico)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>
