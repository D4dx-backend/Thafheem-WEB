<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # API Proxy Rules - Must come BEFORE RewriteBase to avoid ad blockers
  # Match full path including base directory
  RewriteCond %{REQUEST_URI} ^/new_thafheem_web/api/thafheem/(.*)$
  RewriteRule .* https://thafheem.net/thafheem-api/%1 [P,L]
  
  RewriteCond %{REQUEST_URI} ^/new_thafheem_web/api/quran/(.*)$
  RewriteRule .* https://api.quran.com/api/v4/%1 [P,L]
  
  RewriteCond %{REQUEST_URI} ^/new_thafheem_web/api/directus/(.*)$
  RewriteRule .* https://directus.d4dx.co/%1 [P,L]
  
  # Now set base for SPA routing
  RewriteBase /new_thafheem_web/
  
  # Don't rewrite files or directories
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  
  # Rewrite everything else to index.html (SPA fallback)
  RewriteRule . /new_thafheem_web/index.html [L]
</IfModule>

# Set correct MIME types
AddType application/javascript .js .mjs
AddType text/css .css
AddType application/json .json

# Enable CORS for assets
<IfModule mod_headers.c>
  <FilesMatch "\.(js|mjs|css|json|woff|woff2|ttf|svg|ico)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>
