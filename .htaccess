<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /new_thafheem_web/
  
  # API Proxy Rules - Must come BEFORE SPA fallback to avoid ad blockers
  # Malayalam API proxy
  RewriteRule ^api/thafheem/(.*)$ https://thafheem.net/thafheem-api/$1 [P,L]
  
  # Quran.com API proxy
  RewriteRule ^api/quran/(.*)$ https://api.quran.com/api/v4/$1 [P,L]
  
  # Directus API proxy
  RewriteRule ^api/directus/(.*)$ https://directus.d4dx.co/$1 [P,L]
  
  # Don't rewrite files or directories
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  
  # Rewrite everything else to index.html (SPA fallback)
  RewriteRule . /new_thafheem_web/index.html [L]
</IfModule>

# Set correct MIME types
AddType application/javascript .js .mjs
AddType text/css .css
AddType application/json .json

# Enable CORS for assets
<IfModule mod_headers.c>
  <FilesMatch "\.(js|mjs|css|json|woff|woff2|ttf|svg|ico)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>
