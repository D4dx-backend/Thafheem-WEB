<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /new_thafheem_web/
  
  # Proxy API requests to old.thafheem.net to avoid CORS
  # This requires mod_proxy and mod_proxy_http to be enabled
  RewriteCond %{REQUEST_URI} ^/new_thafheem_web/api/old-thaf-api/(.*)$
  RewriteRule ^api/old-thaf-api/(.*)$ https://old.thafheem.net/thaf-api/$1 [P,L]
  
  # Don't rewrite files or directories
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  
  # Rewrite everything else to index.html
  RewriteRule . /new_thafheem_web/index.html [L]
</IfModule>

# Set correct MIME types
AddType application/javascript .js .mjs
AddType text/css .css
AddType application/json .json

# Enable CORS for assets
<IfModule mod_headers.c>
  <FilesMatch "\.(js|mjs|css|json|woff|woff2|ttf|svg|ico)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>
